<div class="container">

	<div class="row">
		<div class="col-md-6">
			<h2>Menu</h2>

			{{#each burgers}}
			{{#unless this.devoured}}
			<ul>
			<li>
				{{!-- {{this.id}} --}}
				{{this.burger_name}}

				<form action="/{{this.id}}?_method=PUT" method="POST" class="inline">
					<input type="hidden" name="devoured" value="true">
					<button class="btn-default float-right" type="submit">Eat</button>
				</form>

			</li>
			</ul>
			{{/unless}}
			{{/each}}

		</div>
		<div class="col-md-6">
			<h2>Eaten</h2>
			{{#each burgers}}
			{{#if this.devoured}}
			<ul>
			<li>
				{{!-- {{this.id}} --}}
				{{this.burger_name}}

			</li>
			</ul>
			{{/if}}
			{{/each}}
			 
		</div>
	</div>

<div class="row">
	    <div class="col-sm-12">

		<form class="burger-form text-center" action="/" method="POST">

		<h2 class="text-center">Add a Burger</h2>
			<div class="form-group">
				<input type="text" id="ca" name="burger_name">
			</div>

			<button class="btn-default" type="submit">Submit</button>
		</form>

		   
	</div>

	  </div>

</div>